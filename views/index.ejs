<!DOCTYPE html>
<html>
<head>
  <title>To-Do List</title>
</head>
<body>
  <h1>My Tasks</h1>

  <form action="/tasks" method="POST">
        <input type="text" name="title" placeholder="Enter a task" required>
        <button type="submit">Add Task</button>
  </form>
  
  <ul>
        <% tasks.forEach(function(task) { %>
          <li>
            <%= task.title %>
            <% if (task.completed) { %>
                ✅
            <% } else { %>
                ❌
            <% } %>
          </li>
        <% }) %>
  </ul>
</body>
</html>
